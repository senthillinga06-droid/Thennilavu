# Disable directory listing
Options -Indexes

# Hide sensitive files
<FilesMatch "^(\.env|config\.php|db\.php|auth\.php)">
    Require all denied
</FilesMatch>

# Block viewing .htaccess
<Files ".htaccess">
    Require all denied
</Files>

# Prevent PHP execution in uploads
RewriteEngine On
RewriteRule ^uploads/.*\.(php|phtml|phar)$ - [F,L]

# Hide server info
ServerSignature Off

RewriteRule uploads

